{% extends "layouts/base.twig" %}

{% block main_content %}
    <h2>All Products:</h2>
    <ul>
        {% for product in products %}
            <li>
                {{ product.name }}: ${{ product.price }} - 
                <a href="/products/{{ product.id }}/edit">Edit</a> | <a href="/products/{{ product.id }}/delete">Delete</a>
            </li>
        {% endfor %}
    </ul>

    <a href="/products/new">Create New Item</a>
{% endblock %}