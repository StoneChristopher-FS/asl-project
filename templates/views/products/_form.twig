<form method="POST" action="/products/{% if product.id %}{{ product.id }}{% endif %}">
    {% if product.id %}
        <input type="hidden" name="id" value="{{ product.id }}">
    {% endif %}
    <div>
        <label for="title">Name:</label>
        <input type="text" name="title" id="title" value="{{ product.title }}">
        <label for="price">Price:</label>
        <input type="number" min="0" step="any" name="price" id="price" value="{{ product.price }}">
    </div>
    <div>
        <input type="submit">
    </div
</form>