<form method="POST" action="/variants/{% if variant.id %}{{ variant.id }}{% endif %}">
    {% if variant.id %}
        <input type="hidden" name="id" value="{{ variant.id }}">
    {% endif %}
    <div>
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" value="{{ variant.title }}">

        <label for="slug">Slug:</label>
        <input type="text" name="slug" id="slug" value="{{ variant.slug }}">

        <label for="description">Description:</label>
        <input type="text" name="description" id="description" value="{{ variant.description }}">

        <label for="price">Price:</label>
        <input type="number" min="0" step="any" name="price" id="price" value="{{ variant.price }}">

        <label for="inventory">Inventory:</label>
        <input type="number" min="0" step="1" name="inventory" id="inventory" value="{{ variant.inventory }}">

    </div>
    <div>
        <label for="">Product:</label>
        <select name="productId" id="">
            {% for product in products %}
                <option value="{{ product.id }}" {% if product.id == variant.productId %}selected='selected'{% endif %}
                >{{ product.title }}</option>
            {% endfor %}
        </select>
    </div>
    <div>
        <input type="submit">
    </div
</form>