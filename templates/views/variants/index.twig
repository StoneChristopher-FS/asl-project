{% extends "layouts/base.twig" %}

{% block main_content %}
    <h2>All Variants:</h2>
    <ul>
        {% for variant in variants %}
            <li>
                {{ variant.title }}: ${{ variant.price }} - 
                <a href="/variants/{{ variant.id }}/edit">Edit</a> | <a href="/variants/{{ variant.id }}/delete">Delete</a>
            </li>
        {% endfor %}
    </ul>

    <a href="/variants/new">Create Variants</a>
{% endblock %}